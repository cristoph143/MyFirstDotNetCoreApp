@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}      

@functions {

    private static List<string> GetUrls()
    {
        // Define and return the list of URLs
        return new List<string>
        {
            "/",
            "/about-company",
            "/get-cities",
            "/from-services",
            "/from-singleton",
            "/from-serviceScope",
            "/view-injection",
            "/contact-support",
            "/autoFac",
            "/products",
            "/search-products",
            "/order-product",
            "/app-setting",
            "/i-configuration"
        };
    }

    private static string GetLinkText(string url)
    {
    // Define and return the link text based on the URL
        return url switch
        {
            "/" => "Home",
            "/about-company" => "About",
            "/get-cities" => "Cities",
            "/from-services" => "Cities Service",
            "/from-singleton" => "Singleton",
            "/from-serviceScope" => "Service Scope",
            "/view-injection" => "View Injection",
            "/contact-support" => "Contact",
            "/autoFac" => "AutoFac",
            "/products" => "All Products",
            "/search-products" => "Search Products",
            "/order-product" => "Order Product",
            "/app-setting" => "App Setting",
            "/i-configuration" => "IConfiguration",
            _ => string.Empty
            };
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    <link href="~/StyleSheet.css" rel="stylesheet"/>
</head>
<body>
<div class="container">
    <div class="navbar">
        <div class="navbar-brand">AspNet Core App</div>
        <ul>
            @foreach (var url in GetUrls())
            {
                <li>
                    <a href="@url">@GetLinkText(url)</a>
                </li>
            }
        </ul>
    </div>

    <div class="page-content">
        @RenderBody()
    </div>

    <div class="footer-content">
        @await RenderSectionAsync("footer_section", false)
    </div>
</div>

</body>
</html>